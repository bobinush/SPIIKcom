@model IEnumerable<Member>
@{
	ViewData["Title"] = "Members";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<table class="table">
	<thead>
		<tr>
			<th>
				<a asp-action="Index">@Html.DisplayNameFor(model => model.Name)</a>
			</th>
			<th>
				<a asp-action="Index">@Html.DisplayNameFor(model => model.JoinDate)</a>
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var member in Model) {
			<tr>
				<td>
					@Html.DisplayFor(modelItem => member.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => member.JoinDate)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@member.ID">Edit</a> |
					<a asp-action="Details" asp-route-id="@member.ID">Details</a> |
					<a asp-action="Delete" asp-route-id="@member.ID">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>