@model EditUserViewModel

@{
	ViewBag.Title = "Ändra";
}

<div class="edit">
	<div class="webshop-top clearfix">
		<div class="webshop-choice">
		<h3>Administration/Kunder</h3>
			</div>
	</div>
	<div class="row useradmin">
	<div class="textholder clearfix">
		<h3>@ViewBag.Title</h3>
	</div>

<div class="useradmin-form">

@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		
		@Html.ValidationSummary(true)
		@Html.HiddenFor(model => model.Id)

		<div class="form-group">
			@Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
			   @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
			   @Html.ValidationMessageFor(model => model.Email)
			</div>
		</div>
		<div class="form-group">
			@Html.Label("Användarroll", null, new { @class = "control-label col-md-2" })
			<span class=" col-md-10">
				@foreach (var item in Model.RolesList)
				{
					<input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" id="@item.Value" class="checkbox-inline" />
					@Html.Label(item.Value, null, new { @class = "control-label" })
				}
			</span>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Spara ändring" class="btn btn-orange" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Tillbaka till listan", "Index")
</div>
	</div>

		</div>
	</div>

@section Scripts {
		@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
