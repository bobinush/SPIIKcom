@model EditUserViewModel 
@{ 
	ViewData["Title"] = "Ändra";
}
<div class="edit">
	<div class="webshop-top clearfix">
		<div class="webshop-choice">
			<h3>Administration/Kunder</h3>
		</div>
	</div>
	<div class="row useradmin">
		<div class="textholder clearfix">
			<h3>@ViewData["Title"]</h3>
		</div>
		<div class="useradmin-form">
			@using (Html.BeginForm()) { @Html.AntiForgeryToken()
			<div class="form-horizontal">
				@Html.ValidationSummary(true) @Html.HiddenFor(model => model.Id)
				<div class="form-group">
					@Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control" }) @Html.ValidationMessageFor(model => model.Email)
					</div>
				</div>
				<div class="form-group">
					@Html.Label("Användarroll", null, new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@foreach (var item in Model.RolesList)
						{
							<label class="btn btn-default">
								<input type="checkbox" name="SelectedRoles" value="@item.Value" autocomplete="off">@item.Text
							</label> 
						}
					</div>
				</div>
				<br>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<a asp-action="Index" class="btn btn-default" role="button">Tillbaka till listan</a>
						<input type="submit" value="Spara ändring" class="btn btn-success" />
					</div>
				</div>
			</div>
			}
		</div>
	</div>
</div>

@section Scripts { 
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); } 
}