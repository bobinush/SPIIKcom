@model Organization
@{
	ViewData["Title"] = "Kontakt";
}
<!-- Page Content -->
	<!-- Content Row -->
	<div class="row">
		<div class="col-md-12">
			<h1 class="page-header">
				Contact
				<small>Subheading</small>
			</h1>
		</div>
		<!-- Map Column -->
		<div class="col-md-8 google-maps-container">
			<!-- Embedded Google Map -->
			<iframe src="@Html.Raw(Model.GoogleLink)"
				style="pointer-events: none;"
				width="100%"
				height="400"
				frameborder="0"
				scrolling="no"
				marginheight="0"
				marginwidth="0"
				allowfullscreen></iframe>
		</div>
		<!-- Contact Details Column -->
		<div class="col-sm-4">
			<h3>Contact Details</h3>
			<p>
				@Model.Address<br>
				@Model.PostalCode @Model.City
			</p>
			<p>
				<i class="fa fa-envelope-o"></i> <a href="mailto:@Model.Email">@Model.Email</a>
			</p>
			<p>
				<i class="fa fa-clock-o"></i>
				Öppettider kontoret<br>
				Måndag: 12-13<br>
				Tisdag: 12-13<br>
				Onsdag: 12-13<br>
				Torsdag: 12-13
				</p>
			<ul class="list-unstyled list-inline list-social-icons">
				<li>
					<a href="#"><i class="fa fa-facebook-square fa-2x"></i></a>
				</li>
				<li>
					<a href="#"><i class="fa fa-linkedin-square fa-2x"></i></a>
				</li>
				<li>
					<a href="#"><i class="fa fa-twitter-square fa-2x"></i></a>
				</li>
				<li>
					<a href="#"><i class="fa fa-google-plus-square fa-2x"></i></a>
				</li>
			</ul>
		</div>
		<!-- Contact Form -->
		@Html.Partial("_ContactForm", new ContactQuestionViewModel())
	</div>
	<!-- /.row -->


@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
	<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
	<script>
		// Disable scroll zooming and bind back the click event
		// http://stackoverflow.com/a/25904582/1695663
		var onMapMouseleaveHandler = function (event) {
			var that = $(this);
			that.on('click', onMapClickHandler);
			that.off('mouseleave', onMapMouseleaveHandler);
			that.find('iframe').css("pointer-events", "none");
		}
		var onMapClickHandler = function (event) {
			var that = $(this);
			// Disable the click handler until the user leaves the map area
			that.off('click', onMapClickHandler);
			// Enable scrolling zoom
			that.find('iframe').css("pointer-events", "auto");
			// Handle the mouse leave event
			that.on('mouseleave', onMapMouseleaveHandler);
		}
		// Enable map zooming with mouse scroll when the user clicks the map
		$('.google-maps-container').on('click', onMapClickHandler);
	</script>
}