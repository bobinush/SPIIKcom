@model UnionMemberViewModel 
@{
	ViewData["Title"] = "Ändra användare";
}
<div class="edit">
	<div class="webshop-top clearfix">
		<div class="webshop-choice">
			<h3>Administration/Kunder</h3>
		</div>
	</div>
	<div class="row useradmin">
		<div class="textholder clearfix">
			<h3>@ViewData["Title"].</h3>
		</div>

		<div class="useradmin-form">
			<form method="post" asp-action="Edit" enctype="multipart/form-data" class = "form-horizontal", role = "form"> 
				<div asp-validation-summary="All" class="text-error"></div>
				<input asp-for="Id" type="hidden" />
				<div class="form-group">
					<label asp-for="Name" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Title" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Email" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Quote" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.Quote, new { @class = "form-control" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-2 control">
						<label asp-for="Picture" class="btn btn btn-default"><i class="fa fa-upload fa-lg"></i>&nbsp; Ladda upp en profilbild</label>
							<input asp-for="Picture" type="file" style="display: none;">
					</div>
				</div>
				<div class="form-group">
					<label asp-for="UnionTypes" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						@foreach (UnionTypeEnum item in Enum.GetValues(typeof(UnionTypeEnum)))
						{
							<label class="btn btn-default">
								<input type="checkbox" name="UnionTypes" value="@item" checked="@(Model?.UnionTypes.HasFlag(item) == true)" >
								@item
							</label> 
						}
					</div>
				</div>
				<br>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<a asp-action="Index" class="btn btn-default" role="button">Tillbaka till listan</a>
						<button type="submit" class="btn btn-primary">
							<i class="fa fa-floppy-o fa-lg"></i>&nbsp; Spara
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}