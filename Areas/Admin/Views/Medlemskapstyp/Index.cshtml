@model IEnumerable<MembershipType>
@{
	ViewData["Title"] = "Medlemskapstyper";
}
<div class="col-sm-9">
	<h2>@ViewData["Title"]
		<span class="pull-right">
			<a asp-action="Create" class="btn btn-default">Skapa ny Medlemskapstyp</a>
		</span>
	</h2>
	@if (TempData.ContainsKey("Message"))
	{
		<div class="alert alert-info alert-fixed alert-dismissable" role="alert">
			<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
			<strong>@TempData["Message"]</strong>
		</div>
	}

	<br>
	<table class="table table-striped table-condensed table-hover table-row-click col-md-12">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Price)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.LengthInYears)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Price)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.LengthInYears) Ã¥r
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id">Redigera</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>